// Prisma Schema for Professional Todo Application

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  todos         Todo[]
  categories    Category[]
  tags          Tag[]
  sharedTodos   SharedTodo[]
  activities    Activity[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Todo Models
enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TodoStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model Todo {
  id          String      @id @default(cuid())
  title       String
  description String?     @db.Text
  status      TodoStatus  @default(PENDING)
  priority    Priority    @default(MEDIUM)
  dueDate     DateTime?
  order       Int         @default(0)
  isDeleted   Boolean     @default(false)
  deletedAt   DateTime?
  completedAt DateTime?

  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  subtasks    Subtask[]
  tags        TodoTag[]
  sharedWith  SharedTodo[]
  activities  Activity[]

  @@index([userId, isDeleted])
  @@index([dueDate])
  @@index([status])
  @@index([priority])
  @@map("todos")
}

model Subtask {
  id          String   @id @default(cuid())
  title       String
  isCompleted Boolean  @default(false)
  order       Int      @default(0)

  todoId      String
  todo        Todo     @relation(fields: [todoId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([todoId])
  @@map("subtasks")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#3b82f6")
  icon      String?

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  todos     Todo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@map("categories")
}

model Tag {
  id        String    @id @default(cuid())
  name      String
  color     String    @default("#6366f1")

  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  todos     TodoTag[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, name])
  @@map("tags")
}

model TodoTag {
  id     String @id @default(cuid())
  todoId String
  tagId  String

  todo   Todo   @relation(fields: [todoId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([todoId, tagId])
  @@map("todo_tags")
}

// Sharing
enum SharePermission {
  VIEW
  EDIT
}

model SharedTodo {
  id         String          @id @default(cuid())
  todoId     String
  userId     String
  permission SharePermission @default(VIEW)

  todo       Todo            @relation(fields: [todoId], references: [id], onDelete: Cascade)
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@unique([todoId, userId])
  @@map("shared_todos")
}

// Activity Log
enum ActivityType {
  CREATED
  UPDATED
  COMPLETED
  DELETED
  RESTORED
  SHARED
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  description String
  metadata    Json?

  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  todoId      String?
  todo        Todo?        @relation(fields: [todoId], references: [id], onDelete: Cascade)

  createdAt   DateTime     @default(now())

  @@index([userId])
  @@index([todoId])
  @@map("activities")
}
