# Database
DATABASE_URL="postgresql://username:password@localhost:5432/todo_db?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Notifications
# Choose email service: 'resend' or 'smtp'
EMAIL_SERVICE="resend"

# Option 1: Resend (recommended - https://resend.com)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="Todo App <noreply@yourdomain.com>"

# Option 2: SMTP (Gmail, Outlook, SendGrid, etc.)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

# Cron Job Security
CRON_SECRET="your-cron-secret-token-for-security"

# App Configuration
NODE_ENV="development"
